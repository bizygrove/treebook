<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <h1>Register</h1>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.text_field :first_name, placeholder: "First Name" %>
          </div>

          <div class="field">
            <%= f.text_field :last_name, placeholder: "Last Name" %>
          </div>

          <div class="field">
            <%= f.text_field :profile_name, placeholder: "Profile Name" %>
          </div>

          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
          </div>

          <div class="field">
            <%= f.text_field :status_colour, placeholder: "Status Colour" %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
            <% else %>
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password " %>
            <% end %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
          </div>

          <div class="actions">
             <%= f.submit "", class: "save" %>

              <div class="form-links">
                  <%= render "devise/shared/links" %>
              </div>
          </div>
        <% end %>
      </div>
    <div class="col-md-3">
    </div>
</div>
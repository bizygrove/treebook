<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <fieldset>
              <h1>Edit <%= resource_name.to_s.humanize %></h1>
              <%= devise_error_messages! %>

              <div class="field">
                <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field status-color-field">
                <%= f.input :status_colour, as: :minicolors, placeholder: "Status Color" %>
              </div>


              <div class="field">
                <%= f.password_field :password, autocomplete: "off", placeholder: "New password" %>
              </div>

              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "New password Confirmation" %>
              </div>

              <div class="field">
                <%= f.password_field :current_password, autocomplete: "off", placeholder: "current password" %>
              </div>

              <div class="actions">
                <%= f.submit "", class: "save" %>
                <div class="form-links">
                  <%= link_to "Back", :back %>
                </div>
              </div>
              
          </fieldset>
      <% end %>
          <fieldset class="cancel-account">
              <h2 class="h1">Cancel my account</h2>
              <%= button_to "", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-danger delete' %></p>
          </fieldset>
    </div>
    <div class="col-md-3">
    </div>
</div>


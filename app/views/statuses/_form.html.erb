<%= simple_form_for(@status, html: {class: "form-horizontal status-form clearfix", multipart: true}) do |f| %>
  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
      <% @status.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :user_id, input_html: { type: 'hidden' }, :disabled => true, label: false  %>
  <%= f.input_field :content, rows: '3', placeholder: 'Status', label: false, onkeyup: "AutoGrowTextArea(this)"  %>

  <% if @status.document_id && @status.document.add_attachment? %>
      <%= link_to image_tag(@status.document.add_attachment.url(:thumb), :alt => @status.content), @status.document.add_attachment.url %>
  <% end %>

  <%= f.input :add_attachment, as: :file %>


  <div class="form-actions">
    <%= f.button :submit,  value: '' %>
  </div>
<% end %>

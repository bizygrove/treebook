<div class="page-header">
  <h1>Status Wall</h1>
</div>


<%= link_to 'Post New Status', new_status_path, class: "btn btn-success post-new-status" %>

<% @statuses.each do |status| %>
<div class="panel panel-primary status">
    <div class="panel-heading clearfix">
        <h3 class="panel-title"><%= status.name %></h3>
        <div class="meta">
          <%= link_to time_ago_in_words(status.created_at) + ' ago', status %>
        </div>
    </div>
    <div class="panel-body">
        <p><%= status.content %></p>
        <div class="meta">
            <div class="admin">
                <%= link_to "Edit", edit_status_path(status) %>
                | <%= link_to "Delete", status, method: :delete, data: {confirm: 'Are you Sure?'} %>
            </div>
        </div>
    </div>
</div>
<% end %>

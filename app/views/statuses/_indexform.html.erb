<%= simple_form_for(@status, html: {class: "form-horizontal clearfix"}) do |f| %>
  
  <%= f.input_field :content, rows: '1', placeholder: 'Status Wall', label: false, onkeyup: "AutoGrowTextArea(this)" %>
  <%= f.input :user_id, input_html: { type: 'hidden' }, :disabled => true, label: false %>

  <div class="form-actions">
    <%= f.button :submit,  value: '' %>
  </div>

  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

      <ul>
      <% @status.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
